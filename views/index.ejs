<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GardenRich</title>
    <!-- <link rel="stylesheet" href="/stylesheet/index.css"> -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <%- include("partials/header") %>

    <div class="w-full min-h-screen py-10 px-20 bg-green-100">
        <h1 class="font-bold mb-8 text-2xl">Best Sellers</h1>
        <div class="products grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% products.forEach(product=> { %>
                <div class="product bg-white p-4 rounded-lg shadow-lg" data-id="<%= product.id %>">
                    <img src="<%= product.image %>" class="w-full h-48 object-cover rounded-lg bg-zinc-200">
                    <h3 class="text-xl tracking-tighter mt-3">
                        <%= product.name %>
                    </h3>
                    <h5 class="text-zinc-500 mt-2">
                        <%= product.weight %>
                    </h5>
                    <div class="flex justify-between items-center mt-4">
                        <h3 class="font-bold">Rs <%= product.price %>
                        </h3>
                        <div class="quantity-controls flex items-center">
                            <button onclick="showCounter(this)"
                                class="add-btn bg-green-600 text-white px-6 py-1.5 rounded-md text-sm font-medium">ADD</button>
                            <div
                                class="counter-control hidden items-center bg-green-600 text-white rounded-md overflow-hidden">
                                <button onclick="updateQty(this, -1)"
                                    class="px-3 py-1.5 hover:bg-green-700 font-bold">-</button>
                                <span class="qty-text px-3 py-1.5 font-bold text-sm">1</span>
                                <button onclick="updateQty(this, 1)"
                                    class="px-3 py-1.5 hover:bg-green-700 font-bold">+</button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <script src="/javascript/index.js"></script>
</body>

</html>