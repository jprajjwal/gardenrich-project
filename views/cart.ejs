<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GardenRich</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <%- include("partials/header") %>

        <div class="max-w-7xl mx-auto px-4 py-10">
            <h1 class="text-3xl font-bold mb-8 text-zinc-800">
                Your Cart
                <span class="text-zinc-400 text-xl font-normal">
                    (<%= totalItems %> Items)
                </span>
            </h1>


            <div class="flex flex-col lg:flex-row gap-8">

                <div class="lg:w-2/3 space-y-4">
                    <% if (cart.items.length> 0) { %>
                        <% cart.items.forEach(item=> { %>
                            <div class="flex items-center justify-between p-4 bg-white rounded-xl shadow-sm border border-zinc-100"
                                data-id="<%= item.productId.id %>" data-price="<%= item.productId.price %>">
                                <div class="flex items-center gap-4">
                                    <div class="w-20 h-20 bg-zinc-100 rounded-lg overflow-hidden">
                                        <img src="<%= item.productId.image %>" class="w-full h-full object-cover">
                                    </div>
                                    <div>
                                        <h3 class="font-bold text-zinc-800">
                                            <%= item.productId.name %>
                                        </h3>
                                        <p class="text-sm text-zinc-500">
                                            <%= item.productId.weight %> pieces
                                        </p>
                                        <p class="font-bold mt-1 text-green-700">Rs. <%= item.productId.price %>
                                        </p>
                                    </div>
                                </div>

                                <div class="flex items-center bg-zinc-100 rounded-md overflow-hidden"
                                    data-id="<%= item.productId.id %>">

                                    <button onclick="updateCartQty(this, -1)"
                                        class="px-3 py-1 hover:bg-zinc-200">-</button>

                                    <span class="px-3 py-1 font-bold qty-text">
                                        <%= item.quantity %>
                                    </span>

                                    <button onclick="updateCartQty(this, 1)"
                                        class="px-3 py-1 hover:bg-zinc-200">+</button>

                                </div>

                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p>Your cart is empty.</p>
                                    <% } %>
                </div>

                <div class="lg:w-1/3">
                    <div class="bg-white p-6 rounded-2xl shadow-lg border border-zinc-100 sticky top-24">
                        <h2 class="text-xl font-bold mb-6">Order Summary</h2>

                        <div class="mb-6">
                            <label class="text-xs font-bold text-zinc-400 uppercase tracking-wider">Apply Coupon</label>
                            <div class="flex mt-1">
                                <input type="text" placeholder="GARDENRICH10"
                                    class="w-full border border-zinc-200 rounded-l-lg px-4 py-2 focus:outline-none focus:ring-1 focus:ring-green-500">
                                <button
                                    class="bg-zinc-800 text-white px-4 py-2 rounded-r-lg font-bold text-sm hover:bg-black">APPLY</button>
                            </div>
                        </div>

                        <div class="space-y-3 text-zinc-600 border-b pb-6">
                            <div class="flex justify-between">
                                <span>Order Total</span>
                                <span>Rs. <%= cart.items.reduce((acc, item)=> acc + (item.productId.price *
                                        item.quantity),
                                        0) %></span>
                            </div>
                            <div class="flex justify-between">
                                <span>Shipping</span>
                                <span class="text-green-600 font-bold">FREE</span>
                            </div>
                            <div class="flex justify-between text-red-500">
                                <span>Coupon Discount</span>
                                <span>- Rs. 0.00</span>
                            </div>
                        </div>

                        <div class="mt-6">
                            <div class="flex justify-between items-end mb-1">
                                <span class="text-xl font-bold">Total Amount</span>
                                <span id="cartTotal" class="text-2xl font-black text-zinc-900">
                                    Rs. <%= cart.items.reduce((acc, item)=>
                                        acc + (item.productId.price * item.quantity), 0) %>
                                </span>
                            </div>
                            <p class="text-right text-xs text-zinc-400 italic">Inclusive of all taxes</p>
                        </div>

                        <button
                            class="w-full bg-green-700 text-white py-4 rounded-xl font-bold mt-6 hover:bg-green-800 transition-colors shadow-lg shadow-green-100">
                            PROCEED TO CHECKOUT
                        </button>
                    </div>
                </div>

            </div>
        </div>


        <script src="/javascript/index.js"></script>
</body>

</html>